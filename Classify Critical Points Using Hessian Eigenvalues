import numpy as np

def classify_critical_point(hessian: np.ndarray, tol: float = 1e-10):

    H = np.array(hessian, dtype=float)

    eigenvalues = np.linalg.eigvalsh(H)  

    if np.any(np.abs(eigenvalues) <= tol):
        return None

    if np.all(eigenvalues > 0):
        return -1

    if np.all(eigenvalues < 0):
        return 1

    return 0
    pass
