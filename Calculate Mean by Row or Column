def calculate_matrix_mean(matrix: list[list[float]], mode: str) -> list[float]:

    means = []
    rows = len(matrix)
    cols = len(matrix[0])

    if mode == 'row':
        for i in range(rows):
            temp = 0
            for j in range(cols):
                temp+= matrix[i][j]

            means.append(temp/cols)
    else:
        for i in range(cols):
            temp = 0
            for j in range(rows):
                temp+= matrix[j][i]
            
            means.append(temp/rows)

	return means
